---
import WorkLayout from '@layouts/WorkLayout.astro'

export const frontmatter = {
	order: 1,
	title: 'Tally',
	year: '2017',
	position: 'Product Designer',
	logo: 'tally_logo_white.svg',
	color: 'rgb(58, 122, 219)',
	description: `Tally is an app that teaches you about your government representatives and their job performance. Instead of focusing just on beliefs or party, Tally scores your representatives by non-ideological factors like attendance, vote participation, and bill creation.`,
}
---

<WorkLayout {...frontmatter}>
	<div id="tally-slides" class="image-carousel-wrap">
		<ul class="image-carousel xyz-in" xyz="fade down ease-out-back" id="photoswipe-gallery">
			<li class="carousel-item gallery-item xyz-nested">
				<a
					class="no-outline"
					target="_blank"
					href="/assets/images/tally/tally-reps.jpg"
					data-pswp-width="750"
					data-pswp-height="1334"
				>
					<img class="carousel-image" src="/assets/images/tally/tally-reps.jpg" alt="Tally Representatives" />
				</a>
			</li>
			<li class="carousel-item gallery-item xyz-nested">
				<a
					class="no-outline"
					target="_blank"
					href="/assets/images/tally/tally-rank.jpg"
					data-pswp-width="750"
					data-pswp-height="1334"
				>
					<img class="carousel-image" src="/assets/images/tally/tally-rank.jpg" alt="Tally Rank" />
				</a>
			</li>
			<li class="carousel-item gallery-item xyz-nested">
				<a
					class="no-outline"
					target="_blank"
					href="/assets/images/tally/tally-search.jpg"
					data-pswp-width="750"
					data-pswp-height="1334"
				>
					<img class="carousel-image" src="/assets/images/tally/tally-search.jpg" alt="Tally Search" />
				</a>
			</li>
			<li class="carousel-item gallery-item xyz-nested">
				<a
					class="no-outline"
					target="_blank"
					href="/assets/images/tally/tally-rep-stats.jpg"
					data-pswp-width="750"
					data-pswp-height="1334"
				>
					<img class="carousel-image" src="/assets/images/tally/tally-rep-stats.jpg" alt="Tally Rep Stats" />
				</a>
			</li>
			<li class="carousel-item gallery-item xyz-nested">
				<a
					class="no-outline"
					target="_blank"
					href="/assets/images/tally/tally-rep-beliefs.jpg"
					data-pswp-width="750"
					data-pswp-height="1334"
				>
					<img class="carousel-image" src="/assets/images/tally/tally-rep-beliefs.jpg" alt="Tally Rep Beliefs" />
				</a>
			</li>
			<li class="carousel-item gallery-item xyz-nested">
				<a
					class="no-outline"
					target="_blank"
					href="/assets/images/tally/tally-rep-money.jpg"
					data-pswp-width="750"
					data-pswp-height="1334"
				>
					<img class="carousel-image" src="/assets/images/tally/tally-rep-money.jpg" alt="Tally Rep Money" />
				</a>
			</li>
			<li class="carousel-item gallery-item xyz-nested">
				<a
					class="no-outline"
					target="_blank"
					href="/assets/images/tally/tally-rep-contact.jpg"
					data-pswp-width="750"
					data-pswp-height="1334"
				>
					<img class="carousel-image" src="/assets/images/tally/tally-rep-contact.jpg" alt="Tally Rep Contact" />
				</a>
			</li>
		</ul>
	</div>

	<div class="page-section skill-section">
		<div class="skill-panel">
			<h3 class="skill-list-header">Pixels</h3>
			<ul class="skill-list">
				<li class="skill-list-item">
					<span class="skill-list-item-text">Sketch</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">Adobe Illustrator</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">InVision</span>
				</li>
			</ul>
		</div>
		<div class="skill-panel">
			<h3 class="skill-list-header">Code</h3>
			<ul class="skill-list">
				<li class="skill-list-item">
					<span class="skill-list-item-text">HTML</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">SASS/CSS</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">JavaScript</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">SVG</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">React</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">GitHub</span>
				</li>
			</ul>
		</div>
		<div class="skill-panel">
			<h3 class="skill-list-header">Web</h3>
			<ul class="skill-list">
				<li class="skill-list-item">
					<span class="skill-list-item-text">Responsive Design</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">Animations</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">BEM + OOCSS</span>
				</li>
				<li class="skill-list-item">
					<span class="skill-list-item-text">Flexbox</span>
				</li>
			</ul>
		</div>
	</div>
</WorkLayout>
